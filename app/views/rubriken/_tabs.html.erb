    </li>
<% end %>
<% end %>
<% if can? :verwalten, Rubrik%>
<% if request.fullpath == verwalten_rubriken_path %>
  <li class="active pull-right">
  <% else %>
  <li class="pull-right">
<% end %>
<%= link_to I18n.t("rubrik.management"), verwalten_rubriken_path if can? :verwalten, Rubrik %>
</li>
<% end %>
</ul>
