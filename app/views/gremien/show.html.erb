<div class="container-fluid">
  <div class="row-fluid">
    <h1 itemprop="name">
      <%= @gremium.name %>
    </h1>
    <% Gremium::TYPEN[@gremium.typ.to_i].to_s %>
    <p itemprop="description">
      <%= @gremium.desc.html_safe %>
